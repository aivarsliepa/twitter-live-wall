{
  "name": "twitter-live-wall",
  "version": "1.0.0",
  "description": "Twitter Live Wall",
  "scripts": {
    "client": "npm run dev --prefix client",
    "server": "nodemon --exec ts-node src/server.ts",
    "dev":
      "concurrently -k -p \"[{name}]\" -n \"Client,Server\" -c \"cyan.bold,green.bold\" \"npm run client\" \"npm run server\"",
    "start": "node src/server.js",
    "test": "jasmine-ts",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "author": "Aivars Liepa",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "socket.io": "^2.0.4",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/jasmine": "^2.8.6",
    "@types/socket.io": "^1.4.31",
    "@types/socket.io-client": "^1.4.32",
    "@types/supertest": "^2.0.4",
    "concurrently": "^3.5.1",
    "jasmine-ts": "^0.2.1",
    "nodemon": "^1.15.1",
    "socket.io-client": "^2.0.4",
    "supertest": "^3.0.0",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
